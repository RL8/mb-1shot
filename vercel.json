{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "AURA_DB_URI": "@aura_db_uri",
    "AURA_DB_USERNAME": "@aura_db_username", 
    "AURA_DB_PASSWORD": "@aura_db_password"
  }
} 